pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M398" and add it to the path.
        maven "M398"
    }

    stages {
        stage('Build') {
            steps {
                // Run Maven on a Unix agent.
                sh "mvn clean package -DskipTests=true"
            }
        }

        stage('Test') {
            steps {
                sh "mvn test"
            }
        }

 //       stage('Deploy') {
   //         steps {
     //           sh "java -jar target/hello-demo-*.jar"
       //     }
        //}
        stage('Deploy') {
    steps {
        sh '''
            nohup java -jar target/hello-demo-*.jar > app.log 2>&1 &
            sleep 5
        '''
    }
}

        stage('Integration Testing') {
            steps {
                sh "curl -s http://192.168.143.128:6767/hello"
            }
        }
    }
}
